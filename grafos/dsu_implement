#include <stdio.h>
#include <stdlib.h>

struct grafo{
	int **adj;
	int **pesos;
	int *g;
	int V;
};

typedef struct edge{
	int peso;
	int u;
	int v;
}Edge;

typedef struct grafo *Grafo;

Grafo init(int v)
{
	Grafo g = (Grafo)malloc(sizeof(struct grafo));
	if(g != NULL)
	{
		g->adj = (int**)malloc(v * sizeof(int*));
		g->pesos = (int**)malloc(v * sizeof(int*));
		g->g = (int*)calloc(v, sizeof(int));
		g->V = v;
		int i;
		for(i=0; i<g->V; i++)
		{
			g->adj[i] = (int*)malloc(v * sizeof(int));
			g->pesos[i] = (int*)malloc(v * sizeof(int));
			g->g[i] = 0;
		}
	}
	
	return g;
}

void dfs(Grafo g)
{
	if(g == NULL)
		return;
	int pilha[g->V], topo=0, visitados[g->V], i;
	for(i=0; i<g->V; i++)
	{
		visitados[i] = 0;
	}
	
	pilha[topo++] = 0;
	visitados[0] = 1;
	while(topo > 0)
	{
		int visitado = pilha[--topo];
	}
}

int find(int p[], int u)
{
    return p[u];
}

void uniao(int p[], int u, int v)
{
    p[v] = u;
}

void dsu(Grafo g)
{
	int parent[g->V];
	int i;
	//Listando todas as arestas
	int pilha[g->V], topo=0, visitados[g->V], cont=0;
	for(i=0; i<g->V; i++)
	{
		cont += g->g[i];
		visitados[i] = 0;
		parent[i] = i;
	}
	
	pilha[topo++] = 0;
	Edge lista[cont];
	visitados[0] = 1;
	int k=0;
	while(topo > 0)
	{
		int visitado = pilha[--topo];
		for(i=0; i<g->g[visitado]; i++)
		{
			lista[k].peso = g->pesos[visitado][i];
			lista[k].u = visitado;
			lista[k].v = g->adj[visitado][i];
			k++;
			if(!visitados[g->adj[visitado][i]])
			{
				visitados[g->adj[visitado][i]] = 1;
				pilha[topo++] = g->adj[visitado][i];
			}
		}
	}
	for(i=0; i<cont; i++)
	{
		for(int j=i+1; j<cont; j++)
		{
			if(lista[i].peso > lista[j].peso)
			{
				Edge aux = lista[i];
				lista[i] = lista[j];
				lista[j] = aux;
			}
		}
	}
	Edge aceitas[cont];
	k=0;
	for(i=0; i<cont; i++)
	{
	    if(find(parent, lista[i].u) != find(parent, lista[i].v))
	    {
	        uniao(&parent[0], lista[i].u, lista[i].v);
	        aceitas[k].peso = lista[i].peso;
	        aceitas[k].u = lista[i].u;
	        aceitas[k].v = lista[i].v;
	        k++;
	    }
	}
	
	for(i=0; i<k; i++)
	{
		printf("peso: %d aresta u: %d aresta v: %d\n", aceitas[i].peso, aceitas[i].u, aceitas[i].v);
	}
}

void inserindo(Grafo g, int orig, int dest, int peso)
{
	g->adj[orig][g->g[orig]] = dest;
	g->adj[dest][g->g[dest]] = orig;
	
	g->pesos[orig][g->g[orig]] = peso;
	g->pesos[dest][g->g[dest]] = peso;
	
	g->g[orig]++;
	g->g[dest]++;
}

int main()
{
	Grafo g = init(5);
	inserindo(g, 0, 1, 1);
	inserindo(g, 1, 2, 2);
	inserindo(g, 1, 3, 3);
	inserindo(g, 2, 0, 4);
	inserindo(g, 3, 4, 5);
	inserindo(g, 1, 3, 4);
	inserindo(g, 3, 0, 5);
	dsu(g);
}
