#include <stdio.h>
#include <stdlib.h>
//HEAPSORT ---
void heapfy(int v[], int n, int i)
{
	int largest = i;
	int left = largest*2+1;
	int right = largest*2+2;
	
	if(left < n && v[left] > v[largest])
		largest = left;
	if(right < n && v[right] > v[largest])
		largest = right;
	
	if(largest != i)
	{
		int temp = v[i];
		v[i] = v[largest];
		v[largest] = temp;
		heapfy(v, n, largest);
	}
}

void heapSort(int v[], int n)
{
	for(int i = n / 2 - 1; i >= 0; i--)
		heapfy(v, n, i);
	for(int i = n - 1; i >= 0; i--)
	{
		int temp = v[0];
		v[0] = v[i];
		v[i] = temp;
		heapfy(v, i, 0);
	}
}


int main()
{
	int v[9] = {4, 0, 1, -9, 6, 7, 5, 3, 2};
	/*SHELLSORT -- for(int gap = 9; gap>0; gap/=2)
	{
		for(int i = gap; i<9; i++)
		{
			int temp = v[i];
			int j;
			for(j=i; j>=gap && v[j-gap] > temp; j-=gap)
				v[j] = v[j-gap];
			v[j] = temp;
		}
	}
	for(int i = 0; i<9; i++)
		printf("%d ", v[i]);*/
	heapSort(v, 9);
	for(int i = 0; i<9; i++)
		printf("%d ", v[i]);
}
